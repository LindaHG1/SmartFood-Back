    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/mdb-ui-kit/6.2.0/mdb.min.js"></script>

    {% block javascript %}
        <script>
            $(document).ready(function () {
                $('.nav-link').click(function () {
                    $('.nav-link').removeClass('active');
                    $(this).addClass('active');
                });
            });
        </script>
    {% endblock %}
    </body>
</html>