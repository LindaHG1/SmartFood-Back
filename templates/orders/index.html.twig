{% extends 'base.html.twig' %}

{% block title %}Pedidos{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="titleSection"><i class="fa-solid fa-cart-arrow-down me-3"></i> Pedidos</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    {# <th>Id</th> #}
                    <th>NÂ° de Pedido</th>
                    <th>Fecha de Registro</th>
                    <th>Fecha de Entrega</th>
                    <th>Total</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for order in orders %}
                <tr>
                    {# <td>{{ order.id }}</td> #}
                    <td>{{ order.orderNum }}</td>
                    <td>{{ order.orderDate ? order.orderDate|date('Y-m-d') : '' }}</td>
                    <td>{{ order.orderDelivery ? order.orderDelivery|date('Y-m-d') : '' }}</td>
                    <td>{{ order.total }}</td>
                    <td>
                        <a href="{{ path('app_orders_show', {'id': order.id}) }}">show</a>
                        <a href="{{ path('app_orders_edit', {'id': order.id}) }}">edit</a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="6">No se encontraron Pedidos</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_orders_new') }}" class="btn btn-add"><i class="fa-regular fa-square-plus me-2"></i> Agregar</a>
    </div>
{% endblock %}
