{% extends 'base.html.twig' %}

{% block title %}Mensajes Recibidos{% endblock %}

{% block body %}
    <div class="content">
        <div class="actionsForm backBtn">
            <a href={{ path('app_contact_index') }} class="btn btn-add"><i class="fa-solid fa-arrow-left me-2"></i> Volver</a>
        </div>
        <h2 class="titleSection"><i class="fa-regular fa-eye me-2"></i>Mensaje Recibido</h2>
        <div class="detailProduct Other">
            <div class="infoProduct">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ contact.id }}</td>
                        </tr>
                        <tr>
                            <th>Nombre y Apellido:</th>
                            <td>{{ contact.name }}</td>
                        </tr>
                        <tr>
                            <th>Correo Electr√≥nico:</th>
                            <td>{{ contact.email }}</td>
                        </tr>
                        <tr>
                            <th>Mensaje:</th>
                            <td>{{ contact.message }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="actionsForm">
                    <a href={{ path('app_contact_edit', {'id': contact.id}) }} class="btn btn-edit"><i class="fa-regular fa-pen-to-square me-2"></i> Editar</a>
                    {{ include('contact/_delete_form.html.twig') }}
                </div>
                
            </div>
        </div>        
    </div>
{% endblock %}
