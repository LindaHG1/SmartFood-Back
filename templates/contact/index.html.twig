{% extends 'base.html.twig' %}

{% block title %}Mensajes Recibidos{% endblock %}

{% block body %}
    <div class="content">
        <h1 class="titleSection"><i class="fa-solid fa-shop me-3"></i> Mensajes Recibidos</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Nombre y Apellidos</th>
                    <th>Correo Electrónico</th>
                    <th>Mensaje</th>
                    <th>Acciones</th>
                </tr>
            </thead>
            <tbody>
            {% for contact in contacts %}
                <tr>
                    <td>{{ contact.id }}</td>
                    <td>{{ contact.name }}</td>
                    <td>{{ contact.email }}</td>
                    <td>{{ contact.message }}</td>
                    <td>
                        <a href="{{ path('app_contact_show', {'id': contact.id}) }}" class="btn btn-show">
                            <i class="fa-regular fa-eye"></i>
                        </a>
                        <a href="{{ path('app_contact_edit', {'id': contact.id}) }}" class="btn btn-edit">
                            <i class="fa-regular fa-pen-to-square"></i>
                        </a>
                    </td>
                </tr>
            {% else %}
                <tr>
                    <td colspan="7">No se encontró ningún mensaje</td>
                </tr>
            {% endfor %}
            </tbody>
        </table>

        <a href="{{ path('app_contact_new') }}" class="btn btn-add"><i class="fa-regular fa-square-plus me-2"></i> Agregar</a>
    </div>
{% endblock %}
