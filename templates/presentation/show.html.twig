{% extends 'base.html.twig' %}

{% block title %}Productos | Presentación{% endblock %}

{% block body %}
    <div class="content">
        <div class="actionsForm backBtn">
            <a href={{ path('app_presentation_index') }} class="btn btn-add"><i class="fa-solid fa-arrow-left me-2"></i> Volver a la lista</a>
        </div>
        <h2 class="titleSection"><i class="fa-regular fa-eye me-2"></i>Detalle de Presentación</h2>
        <div class="detailProduct Other">
            <div class="infoProduct">
                <table class="table">
                    <tbody>
                        <tr>
                            <th>ID</th>
                            <td>{{ presentation.id }}</td>
                        </tr>
                        <tr>
                            <th>Presentación:</th>
                            <td>{{ presentation.typePresentation }}</td>
                        </tr>
                    </tbody>
                </table>
                <div class="actionsForm">
                    <a href={{ path('app_presentation_edit', {'id': presentation.id}) }} class="btn btn-edit"><i class="fa-regular fa-pen-to-square me-2"></i> Editar</a>
                    {{ include('presentation/_delete_form.html.twig') }}
                </div>
            </div>
        </div>        
    </div>
{% endblock %}
