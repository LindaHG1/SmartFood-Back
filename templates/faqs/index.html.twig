{% extends 'base.html.twig' %}

{% block title %}Faqs index{% endblock %}

{% block body %}
    <h1>Faqs index</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Question</th>
                <th>Answer</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for faq in faqs %}
            <tr>
                <td>{{ faq.id }}</td>
                <td>{{ faq.question }}</td>
                <td>{{ faq.answer }}</td>
                <td>
                    <a href="{{ path('app_faqs_show', {'id': faq.id}) }}">show</a>
                    <a href="{{ path('app_faqs_edit', {'id': faq.id}) }}">edit</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

    <a href="{{ path('app_faqs_new') }}">Create new</a>
{% endblock %}
