{% extends 'base.html.twig' %}

{% block title %}Usuarios registrados{% endblock %}

{% block body %}

    <div class="content">
        <h1 class="titleSection"> Usuarios Registrados</h1>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Correo Electr√≥nico</th>
                    <th>Roles</th>
                </tr>
            </thead>
            <tbody>
                {% for user in users %}
                    <tr>
                        <td>{{ user.id }}</td>
                        <td>{{ user.email }}</td>
                        <td>{{ user.roles|join(', ') }}</td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
        <a href="{{ path('app_register') }}" class="btn btn-add"><i class="fa-regular fa-square-plus me-2"></i> Agregar</a>
    </div>
{% endblock %}